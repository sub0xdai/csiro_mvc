@model csiro_mvc.Models.ApplicationForm

<div class="container mt-4">
    <h2>Research Position Application</h2>
    <form asp-action="Apply" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
            <small class="form-text text-muted">Enter the title of the research position you are applying for.</small>
        </div>

        <div class="mb-3">
            <label asp-for="SelectedCourse" class="form-label"></label>
            <select asp-for="SelectedCourse" asp-items="Html.GetEnumSelectList<Course>()" class="form-select">
                <option value="">Select a Course</option>
            </select>
            <span asp-validation-for="SelectedCourse" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GPA" class="form-label"></label>
            <input asp-for="GPA" class="form-control" type="number" step="0.1" min="3.0" max="4.0" />
            <span asp-validation-for="GPA" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="University" class="form-label"></label>
            <input asp-for="University" class="form-control" />
            <span asp-validation-for="University" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CoverLetter" class="form-label"></label>
            <textarea asp-for="CoverLetter" class="form-control" rows="5"></textarea>
            <span asp-validation-for="CoverLetter" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CVFile" class="form-label">CV</label>
            <input asp-for="CVFile" class="form-control" accept=".pdf,.doc,.docx" />
            <span asp-validation-for="CVFile" class="text-danger"></span>
            <small class="form-text text-muted">Upload your CV in PDF, DOC, or DOCX format.</small>
        </div>

        <button type="submit" class="btn btn-primary">Submit Application</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
