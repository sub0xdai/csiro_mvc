@model csiro_mvc.Models.ResearchProgram

@{
    ViewData["Title"] = "Research Program Details";
    var shortDescription = Model.Description?.Length > 300 
        ? $"{Model.Description.Substring(0, 300)}..." 
        : Model.Description;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Program Details</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0 h4">@Model.Title</h2>
            <span class="badge bg-light text-primary">@Model.Department</span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="mb-4">
                        <h5 class="text-primary mb-3">Program Overview</h5>
                        <p class="card-text lead">@shortDescription</p>
                        @if (Model.Description?.Length > 300)
                        {
                            <button class="btn btn-link p-0" type="button" data-bs-toggle="collapse" data-bs-target="#fullDescription">
                                Read more...
                            </button>
                            <div class="collapse" id="fullDescription">
                                <p class="card-text mt-2">@Model.Description</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-3 text-primary">Key Information</h6>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-people-fill me-2"></i>
                                <span><strong>Positions:</strong> @Model.OpenPositions</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar-event me-2"></i>
                                <span><strong>Start Date:</strong> @Model.StartDate.ToString("MMM yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-cash me-2"></i>
                                <span><strong>Funding:</strong> $@Model.FundingAmount.ToString("N0")</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-badge me-2"></i>
                                <span><strong>Supervisor:</strong> @Model.Supervisor</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="text-primary mb-3">Program Benefits</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-building me-2"></i>Research Facilities</h6>
                                <p class="card-text text-muted">Access to CSIRO's state-of-the-art research facilities and equipment.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-people me-2"></i>Collaboration</h6>
                                <p class="card-text text-muted">Work alongside leading scientists and researchers in your field.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-graph-up me-2"></i>Development</h6>
                                <p class="card-text text-muted">Comprehensive professional development and training opportunities.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-cash-stack me-2"></i>Funding</h6>
                                <p class="card-text text-muted">Competitive research funding and additional project resources.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-controller="Application" asp-action="Apply" class="btn btn-primary btn-lg">
                    <i class="bi bi-file-earmark-text me-2"></i>Apply Now
                </a>
                <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-secondary btn-lg ms-2">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize any tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}