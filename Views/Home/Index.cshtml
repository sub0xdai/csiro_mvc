@{
    ViewData["Title"] = "CSIRO Application Portal";
}

<style>
    .card {
        transition: transform 0.2s;
        margin-bottom: 20px;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .btn {
        width: 100%;
    }
</style>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to CSIRO Application Portal</h1>
        <p class="lead">Your gateway to research opportunities at CSIRO</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Submit Application</h5>
                    <p class="card-text">Ready to start your research journey? </p>
                    <a href="/Application/Create" class="btn btn-primary">Apply Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Track Progress</h5>
                    <p class="card-text">Check the status of your application and view updates.</p>
                    <a href="/Application/Status" class="btn btn-info">Check Status</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Research Programs</h5>
                    <p class="card-text">Explore our diverse research programs </p>
                    <a href="/Home/Programs" class="btn btn-success">View Programs</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Application Requirements</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            Minimum GPA of 3.0
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            Current university enrollment or recent graduate
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            Updated CV and cover letter
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            Academic transcripts
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
