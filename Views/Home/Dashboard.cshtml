@model csiro_mvc.Models.ViewModels.DashboardViewModel
@using csiro_mvc.Models

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Welcome, @Model.FirstName!</h5>
                    <p class="card-text">
                        <strong>Department:</strong> @Model.Department<br>
                        <strong>Role:</strong> @Model.Role<br>
                        <strong>Last Login:</strong> @Model.LastLoginTime.ToString("g")
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Your Applications</h5>
                    <p class="card-text">
                        You have submitted <strong>@Model.TotalApplications</strong> application(s).
                    </p>
                    @if (Model.Applications != null && Model.Applications.Any())
                    {
                        <div class="table-responsive mb-3">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Program</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model.Applications)
                                    {
                                        <tr>
                                            <td>@app.Title</td>
                                            <td>
                                                <span class="badge bg-@(app.Status switch {
                                                    ApplicationStatus.Pending => "warning",
                                                    ApplicationStatus.Approved => "success",
                                                    ApplicationStatus.Rejected => "danger",
                                                    _ => "secondary"
                                                })">
                                                    @app.Status
                                                </span>
                                            </td>
                                            <td>@app.CreatedAt.ToString("d")</td>
                                            <td>
                                                <a asp-controller="Application" asp-action="Details" asp-route-id="@app.Id" 
                                                   class="btn btn-sm btn-outline-primary">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    <a asp-controller="Application" asp-action="Index" class="btn btn-primary">View All Applications</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Research Programs</h5>
                    @if (Model.RecentPrograms != null && Model.RecentPrograms.Any())
                    {
                        <div class="list-group">
                            @foreach (var program in Model.RecentPrograms)
                            {
                                <a asp-controller="Programs" asp-action="Details" asp-route-id="@program.Id" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@program.Name</h6>
                                        <small>@program.OpenPositions positions</small>
                                    </div>
                                    <p class="mb-1">@program.Description</p>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p>No recent programs available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
