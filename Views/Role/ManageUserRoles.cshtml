@model List<csiro_mvc.Models.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container mt-4">
    <h2>Manage User Roles</h2>
    <div class="row mb-3">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary">Back to Roles</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @foreach (var user in Model)
            {
                <div class="border p-3 mb-3">
                    <h5>@user.Email</h5>
                    <form asp-action="UpdateUserRoles" method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <div class="row">
                            @foreach (var role in user.AllRoles)
                            {
                                <div class="col-md-3">
                                    <div class="form-check">
                                        <input type="checkbox" 
                                               name="roles" 
                                               value="@role" 
                                               class="form-check-input" 
                                               @(user.Roles.Contains(role) ? "checked" : "") />
                                        <label class="form-check-label">@role</label>
                                    </div>
                                </div>
                            }
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Update Roles</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
